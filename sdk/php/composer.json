{
    "name": "pexipay/sdk",
    "description": "Official Pexipay SDK for PHP",
    "type": "library",
    "keywords": ["pexipay", "payment", "crypto", "blockchain", "card-to-crypto", "api", "sdk"],
    "homepage": "https://pexipay.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Pexipay",
            "email": "dev@pexipay.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Pexipay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pexipay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests",
        "format": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
